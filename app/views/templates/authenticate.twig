{% extends "templates/base.twig" %}

{% block css %}"../assets/styles/authenticate.css"{% endblock %}

{% block title %}Client Login{% endblock %}
{% block body %}
	<div id="form">
		<div style="margin-left:2vw">
			<form action="/client/auth" method="POST">
				Username:<input type="text" name="uname" id="user">
				<br><br>
				Password:
				<input type="password" name="pass" id="pass">
				<br>
				{% if flag %}
					<p>Invalid Username or Password</p>

				{% endif %}
				{% if not flag %}
					<br>
				{% endif %}
				<div id="buttons">
					<div>
						<input type="submit" value="Login" id="login"/>
					</div>
					<div>
						<a id="link" href="/client/newuser">New User? Register!</a>
					</div>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
